{
    "compilerOptions": {
      "jsx": "react-jsx",
      "target": "es5",
      "module": "es2015",
      "lib": ["dom", "es2015", "es2017"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "include": ["resources/js/**/*"]
  }